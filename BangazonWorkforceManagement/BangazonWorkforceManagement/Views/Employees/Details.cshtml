@model BangazonWorkforceManagement.Models.ViewModels.EmployeeDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Department.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.IsSupervisor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.IsSupervisor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.ComputerInfo)
        </dt>
        @{
            if (Model.Computer.Id == 0)
            {
                <dd class="col-sm-10">
                    <span>No computer assigned</span>
                </dd>
            }
            else 
            {
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Computer.ComputerInfo)
                </dd>
            }
        }    
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingPrograms)
        </dt>
        <div>

            @foreach (var item in Model.TrainingPrograms)
            {
                <dd class="col-sm-10">
                    <span>@item.Name</span>
                </dd>
            }
        </div>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Employee.Id }) |
    @Html.ActionLink("Assign To Training Program", "EditTraining", new { id = Model.Employee.Id }) |

    <a asp-action="Index">Back to List</a>
</div>
