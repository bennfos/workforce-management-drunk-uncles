@model IEnumerable<BangazonWorkforceManagement.Models.Computer>

@{
    ViewData["Title"] = "Index";
}

<style>
    .page_Header {
        display: flex;
        justify-content: center;
    }

    .search_bar {
    margin: 15px;
    }
</style>

<div class="page_Header">
    <h1>Computers</h1>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
            <div class="search_bar">
            <form asp-controller="Computers" asp-action="Index" method="get">
                <input name="q" id="Search" placeholder="Make/Manufacturer" />
                <input type="submit" value="Search" />
                <a asp-action="Index"></a>
            </form>
                </div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DecomissionDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>


        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Make)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manufacturer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PurchaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DecomissionDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    <span>No Matching Computers Found</span>
                </td>
            </tr>
        }
    </tbody>
</table>
